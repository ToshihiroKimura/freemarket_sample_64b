.device.body
  .header
    = render "devise/shared/header"
  .sessions_main
    .container.make_account
      %p アカウントをお持ちでない方はこちら
      .btn.blue
        =link_to "新規会員登録","/users/sign_up",class: "btn blue__link"
    .container.sign_in
      .sns_links
        .btn.facebook
          =link_to "Facebookでログイン","https://www.facebook.com/",class: "btn facebook__link"
          = icon("fab", "facebook-square",class: "facebook_logo")
        .btn.google
          = icon("fab", "google",class: "google_logo")
          =link_to "Googleでログイン","https://www.google.com/",class: "btn google__link"
      .account_info
        %input(type="e-mail" name="e-mail" class="input_box" value="" placeholder="メールアドレス")/
        -# サーバーサイド作業にてformメソッドを実装予定
      .account_info
        %input(type="password" name="password" class="input_box" value="" placeholder="パスワード")/
      .not_robot
        .alert
          確認は時間切れとなりました。チェックボックスをもう一度オンにしてください。
        .cycle_logo
          %i.fas.fa-recycle
          -# ちょうどよいアイコンが見つからなかったので仮設定
        %input(type="checkbox" name="" class="robot_checkbox" value="1")/
        .iamnotrobot 私はロボットではありません
        .praivacy_policy プライバシー・利用規約
      .btn.red
        =link_to "ログイン","#",class: "btn red__link"
      = link_to "パスワードをお忘れの方","#", class: "p"
  = render "devise/shared/footer"